.tooltip
  display inline-block
  position relative
  box-sizing border-box

  &:hover, &.active
    >.inner
      display block

  >.inner
    display none
    padding 5px
    background-color white
    position absolute
    border 1px solid #AAA
    box-sizing border-box

    >.arrow, >.arrow:after
      width 0
      height 0
      position absolute

    >.arrow:after
      content ''

  &.top >.inner
    top 0
    margin-top -(50px + 6px)
    left 50%
    margin-left -50px

    >.arrow
      border-top 6px solid gray
      border-left 6px solid transparent
      border-right 6px solid transparent
      bottom -6px
      left 50%
      margin-left -6px

    >.arrow:after
      border-top 6px solid white
      border-left 6px solid transparent
      border-right 6px solid transparent
      left -6px
      bottom 0
      margin-bottom 1px

  &.bottom >.inner
    bottom 0
    margin-bottom -(50px + 6px)
    left 50%
    margin-left -25px

    >.arrow
      border-bottom 6px solid gray
      border-left 6px solid transparent
      border-right 6px solid transparent
      top -6px
      left 50%
      margin-left -6px

    >.arrow:after
      border-bottom 6px solid white
      border-left 6px solid transparent
      border-right 6px solid transparent
      left -6px
      top 0
      margin-top 1px

  &.right >.inner
    right 0
    margin-right -(50px + 6px)
    top 50%
    margin-top -25px

    >.arrow
      border-right 6px solid gray
      border-top 6px solid transparent
      border-bottom 6px solid transparent
      left -6px
      top 50%
      margin-top -6px

    >.arrow:after
      border-right 6px solid white
      border-top 6px solid transparent
      border-bottom 6px solid transparent
      top -6px
      left 0
      margin-left 1px

  &.left >.inner
    left 0
    margin-left -(50px + 6px)
    top 50%
    margin-top -25px

    >.arrow
      border-left 6px solid gray
      border-top 6px solid transparent
      border-bottom 6px solid transparent
      right -6px
      top 50%
      margin-top -6px

    >.arrow:after
      border-left 6px solid white
      border-top 6px solid transparent
      border-bottom 6px solid transparent
      top -6px
      right 0
      margin-right 1px
